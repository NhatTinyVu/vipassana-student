{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "jsx": "react",
    "paths": {
      "*/": ["./src/*"],
      "src": ["./src"],
      "src/*": ["./src/*"],
      "i18n": ["./src/common/i18n"],
      "i18n/*": ["./src/common/i18n/*"],
      "styles": ["./src/common/styles"],
      "styles/*": ["./src/common/styles/*"],
      "constants": ["./src/common/constants"],
      "ui": ["./src/components/ui"],
      "ui/*": ["./src/components/ui/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
